<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/singleAddressCardView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/addressId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="id"
            android:visibility="invisible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/iconPin"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center|end"
                android:layout_marginLeft="15dp"
                app:tint="#8259A1"
                android:src="@drawable/baseline_place_24" />
            <ImageView
                android:id="@+id/iconDelete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center|end"
                android:visibility="invisible"
                android:src="@drawable/baseline_delete_forever_24"
                app:tint="#E51D20" />

            <TextView
                android:id="@+id/address_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Generała Władysława Sikorskiego 30/120" />

            <RadioButton
                android:id="@+id/radioButtonAddress"
                android:layout_width="29dp"
                android:layout_height="wrap_content"
                android:buttonTint="#8259A1"
                android:layout_marginLeft="10dp" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>