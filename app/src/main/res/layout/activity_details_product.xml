<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.ProductPerCategoryFragment"
    android:tools_context="rollbar.com.rollbarKep.ProductPerCategoryFragment">

    <LinearLayout
        android:id="@+id/linearLayoutByBackDetailsProduct"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/zxing_transparent"
        android:gravity="left|center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backArrowDetailsProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:layout_marginRight="120dp"
            android:visibility="invisible"
            android:src="@drawable/baseline_arrow_back_24" />

    </LinearLayout>

    <ImageView
        android:id="@+id/detailsProductImg"
        android:layout_below="@id/linearLayoutByBackDetailsProduct"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:padding="50dp"
        android:src="@drawable/product"/>

    <TextView
        android:id="@+id/detailProductText"
        android:layout_below="@+id/detailsProductImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Produkt"/>

    <TextView
        android:id="@+id/detailProductDescription"
        android:layout_below="@id/detailProductText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="opis produktu"
        android:layout_marginLeft="15dp"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/detailProductPrice"
        android:layout_below="@id/detailProductDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textColor="#8259A1"
        android:textStyle="bold"
        android:text="3.47 zÅ‚"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/detailProductPrice"
        android:layout_marginTop="70dp">

        <com.smarteist.autoimageslider.SliderView
            android:id="@+id/image_slider"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/banner_details"
            app:sliderAnimationDuration="600"
            app:sliderAutoCycleDirection="back_and_forth"
            app:sliderAutoCycleEnabled="true"
            app:sliderIndicatorAnimationDuration="600"
            app:sliderIndicatorGravity="center_horizontal|bottom"
            app:sliderIndicatorMargin="15dp"
            app:sliderIndicatorOrientation="horizontal"
            app:sliderIndicatorPadding="3dp"
            app:sliderIndicatorRadius="2dp"
            app:sliderIndicatorSelectedColor="#5A5A5A"
            app:sliderIndicatorUnselectedColor="#FFF"
            app:sliderScrollTimeInSec="2"
            app:sliderStartAutoCycle="true" />

    </androidx.cardview.widget.CardView>
</RelativeLayout>