<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".product.ProductPerCategoryFragment">


    <LinearLayout
        android:id="@+id/textTittleProducts"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/zxing_transparent"
        android:gravity="left|center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backArrowProductByCat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:layout_marginRight="110dp"
            android:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.1"
            android:text="PRODUKTY"
            android:textColor="#2E2E2E"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_for_products_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textTittleProducts"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewProducts"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    </LinearLayout>


</RelativeLayout>