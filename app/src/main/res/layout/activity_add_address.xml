<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddAddressActivity">

    <TextView
        android:id="@+id/giveAddressTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="25dp"
        android:text="Podaj swój adres"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/giveAddressTextView"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/idEdtStreet"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_border"
            android:ellipsize="start"
            android:gravity="center|center_horizontal"
            android:hint="ulica"
            android:inputType="text"
            android:textColor="#101011" />

        <EditText
            android:id="@+id/idEdtStreetNumber"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_weight="3"
            android:background="@drawable/edit_text_border"
            android:ellipsize="start"
            android:gravity="center|center_horizontal"
            android:hint="numer"
            android:inputType="text"
            android:textColor="#101011" />

    </LinearLayout>

    <EditText
        android:id="@+id/idEdtAprtNumber"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/linear"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@drawable/edit_text_border"
        android:ellipsize="start"
        android:gravity="center|center_horizontal"
        android:hint="numer lokalu"
        android:inputType="text"
        android:textColor="#101011" />

    <EditText
        android:id="@+id/idEdtFloor"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/idEdtAprtNumber"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@drawable/edit_text_border"
        android:ellipsize="start"
        android:gravity="center|center_horizontal"
        android:hint="piętro"
        android:inputType="text"
        android:textColor="#101011" />

    <EditText
        android:id="@+id/idInstraction"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/idEdtFloor"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@drawable/edit_text_border"
        android:ellipsize="start"
        android:gravity="center|center_horizontal"
        android:hint="instrukcje dostawy"
        android:inputType="text"
        android:textColor="#101011" />

    <Button
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_below="@+id/idInstraction"
        android:id="@+id/LogInBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="#8259A1"
        android:inputType="textCapWords"
        app:strokeColor="#8259A1"
        android:letterSpacing="0.2"
        android:text="Zapisz adres"
        android:textSize="10dp"
        android:textColor="#FFFDFD"
        tools:ignore="TextContrastCheck" />

</RelativeLayout>